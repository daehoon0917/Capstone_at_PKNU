<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/columnWidthInHourlyForecast"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="sans-serif-condensed"
        android:includeFontPadding="false"
        android:text="15"
        android:textAlignment="center"
        android:textSize="13sp"
        />

    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="2dp"
        >

        <ImageView
            android:id="@+id/leftWeatherIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:minWidth="18dp"
            android:minHeight="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/day_clear"
            />

        <ImageView
            android:id="@+id/rightWeatherIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:minWidth="18dp"
            android:minHeight="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/day_clear"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/pop"
            />

        <TextView
            android:id="@+id/pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:includeFontPadding="false"
            android:text="10%"
            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rainVolumeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/raindrop"
            />

        <TextView
            android:id="@+id/rainVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:includeFontPadding="false"
            android:text="0.0"
            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/snowVolumeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/snowparticle"
            />

        <TextView
            android:id="@+id/snowVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:includeFontPadding="false"
            android:text="0.0"
            android:textSize="12sp"
            />

    </LinearLayout>


</LinearLayout>